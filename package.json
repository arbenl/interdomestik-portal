{
  "name": "interdomestik-member-portal",
  "version": "1.0.0",
  "description": "Member portal for Interdomestik organization",
  "main": "index.js",
  "scripts": {
    "build": "npm --prefix frontend run build && npm --prefix functions run build",
    "test": "npm run test:rules",
    "test:rules": "firebase emulators:exec --only firestore \"mocha --require ts-node/register test/**/*.test.ts\"",
    "lint": "npm --prefix frontend run lint && npm --prefix functions run lint",
    "deploy": "firebase deploy",
    "serve": "firebase serve",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "e2e:local": "cypress run --config baseUrl=http://localhost:5000",
    "prepare": "husky",
    "dev:all": "(cd frontend && npm run build); (cd functions && npm run serve) & (cd frontend && npm run dev)",
    "test:all": "npm run test:rules && npm --prefix functions run test && npm --prefix frontend run test -- --run"
  },
  "keywords": [
    "member-portal",
    "firebase",
    "interdomestik"
  ],
  "author": "Manus AI",
  "license": "MIT",
  "dependencies": {
    "firebase": "^12.2.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "chai": "^6.0.1",
    "cypress": "^15.2.0",
    "firebase-tools": "^14.16.0",
    "mocha": "^11.7.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  },
  "lint-staged": {
    "frontend/src/**/*.{ts,tsx}": [
      "npm --prefix frontend run lint",
      "npm --prefix frontend run typecheck"
    ],
    "functions/src/**/*.ts": [
      "npm --prefix functions run lint",
      "npm --prefix functions run typecheck"
    ]
  }
}
